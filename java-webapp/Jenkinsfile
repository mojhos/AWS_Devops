def gv

pipeline {
    agent any
    stages {
        stage("init") {
            steps {
                script {
                    dir('java-webapp') {
                        gv = load "script.groovy"
                    }
                }
            }
        }
        stage("build War file") {
            steps {
                script {
                    echo "building War"
                    gv.buildWar()
                }
            }
        }
        stage("build image") {
            steps {
                script {
                    echo "building image"
                    gv.buildImage()
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    echo "deploying"
                    gv.deployApp()
                }
            }
        }
    }   
}
