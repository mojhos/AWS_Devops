def gv

pipeline {
    agent any
    stages {
        stage("init") {
            steps {
                script {
                    dir('java-webapp') {
                        gv = load "script.groovy"
                    }
                }
            }
        }
        stage("build War file") {
            steps {
                script {
                    dir('java-webapp') {
                        gv.buildWar()
                    }
                }
            }
        }
        stage("build image") {
            steps {
                script {
                    withCredentials([
                        // Use the class for AWS Credentials Binding
                        [$class: 'AmazonWebServicesCredentialsBinding', 
                         // Use the ID you set in jenkins server for aws credentials
                         credentialsId: 'aws-cred',
                         accessKeyVariable: 'AWS_ACCESS_KEY_ID', 
                         secretKeyVariable: 'AWS_SECRET_ACCESS_KEY']
                    ]) {
                        // Change directory before calling the Groovy function
                        dir('java-webapp') {
                            gv.buildImage() 
                        }
                    }
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    dir('java-webapp') {
                         gv.deployApp()
                    }
                }
            }
        }
    }   
}
